{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Launch WASM Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "basic-http-server",
            "runtimeArgs": [
                "."
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "serverReadyAction": {
                "pattern": "addr: (https?://\\S+)",
                "uriFormat": "%s",
                "action": "openExternally"
            },
            "preLaunchTask": "build"
        },
        {
            "name": "Launch WASM Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "basic-http-server",
            "runtimeArgs": [
                "."
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "serverReadyAction": {
                "pattern": "addr: (https?://\\S+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        }
    ]
} 